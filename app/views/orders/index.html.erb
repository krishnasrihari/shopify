<div class="page-header">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Order
  <% end %>
  <h1>Listing orders</h1>
  <p><a href="<%= import_orders_path %>">Import Orders</a></p>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Number</th>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Shopify order</th>
            <th>Order date</th>
            <th>Total</th>
            <th>Line item count</th>
            <th>Financial status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
            <td><%= order.number %></td>
            <td><%= order.email %></td>
            <td><%= order.first_name %></td>
            <td><%= order.last_name %></td>
            <td><%= order.shopify_order_id %></td>
            <td><%= order.order_date %></td>
            <td><%= order.total %></td>
            <td><%= order.line_item_count %></td>
            <td><%= order.financial_status %></td>
            <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
